<h1>Books</h1>
<table>
  <tr>
    <th>Title</th>
    <th>Body</th>
  </tr>
<% @books.each do |book| %>

  <% if #{book.id} = nil %>
  <tr>
    <td><%= book.title %></td>
    <td><%= book.body %></td>
    <td><%= link_to "Show", book_path(book.id) %></td>
    <td><%= link_to "Edit", "books/#{book.id}/edit" %>
    </td>
    <td><%= link_to "Destroy", book_path(book.id), method: :delete, "data-confirm" => "Are you sure?" %></td>
  </tr>
  <% else %>
  <% end %>

<% end %>
</table>


<%= form_with model: @book do |f| %>



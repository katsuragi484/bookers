<div>
  <%= flash[:notice] %>
</div>

<h1>Books</h1>
<% @books.each do |book| %>
<table>
  <tr>
    <th>Title</th>
    <th>Body</th>
  </tr>
  <% if #{book.id} = nil %>
  <tr>
    <td><%= book.title %></td>
    <td><%= book.body %></td>
    <td><%= link_to "Show", book_path(book.id) %></td>
    <td><%= link_to "Edit", "books/#{book.id}/edit" %>
    </td>
    <td><%= link_to "Destroy", destroy_book_path(book.id), method: :delete, "data-confirm" => "Are you sure?" %></td>
  </tr>
  <% else %>
  <% end %>
</table>

<% end %>

<%= form_with model: @book do |f| %>


<h2>New book</h2>

  <label>Title</label>
  <%= f.text_field :title %>
  <label>Body</label>
  <%= f.text_area :body %>

  <%= f.submit "Create Book"%>
<% end %>
<h1>Editing Book</h1>

<%= form_with model: @book, url: update_book_path(@book.id), method: :patch do |f|%>
<label>Title</label>
<%= f.text_field :title ,value: @book.title %>
<label>Body</label>
<%= f.text_area :body ,value: @book.body %>

<%= f.submit 'Update Book'%>
<% end %>

<%= link_to "Show" , book_path(@book.id) %>
<%= link_to "Back" , '/books' %>